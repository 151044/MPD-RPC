pkgname=('mpd-discord-rpc-java')
pkgver='0.0.1.0'
pkgrel=1
pkgdesc="Discord RPC for the Music Player Daemon."
url="https://nopersonalinfo.freemyip.com"
arch=('any')
license=('GPL')
depends=('jdk11-openjdk')
conflicts=('mpd-discord-rpc-git')
source=("$pkgname::git+https://github.com/151044/Netty-Wolf.git")
sha512sums=('SKIP')
prepare() {
    cd $pkgname
    chmod 755 "gradlew"
}
build() {
    cd $pkgname
    unset _JAVA_OPTIONS
    cd Client/src/natives/
    make linux
    cd ../../../
    GRADLE_USER_HOME="$srcdir" ./gradlew compileJava jar clientJar
}
package() {
}
